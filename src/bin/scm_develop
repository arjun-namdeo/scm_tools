#!/usr/bin/env python
# -*- coding: utf-8 -*-

"""
Install the current package to the user repository
"""
import os
import argparse
import sys
import subprocess

from logIO import get_logger
from scm_tools import constants as scm_constants
from scm_tools.git_utils import PyGitRepository, create_dev_branch

logger = get_logger(__name__)


def scm_develop_package():
    """
    Install the package
    """
    parser = parse_information()


def parse_information():
    """
    Get the user input from the command line
    """
    parser = argparse.ArgumentParser()
    parser.add_argument("branch", default=scm_constants.DEVELOP_BRANCH)
    return parser.parse_args()


if __name__ == "__main__":
    scm_develop_package()

